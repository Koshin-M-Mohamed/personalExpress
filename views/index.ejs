<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NBA LOG</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Log your favorite NBA player</h1>
  <div class="row">

    <form action="/saveNbaStats" method="post">
        <div class="form-group">
            <label>Player's Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Player's Position</label>
            <input type="text" class="form-control" name="position">
        </div>
        <div class="form-group">
            <label>Player's Team</label>
            <input type="text" class="form-control" name="team">
        </div>
        <div class="form-group">
            <label>Player's Points Per Game</label>
            <input type="text" class="form-control" name="pointsPerGame">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>

  <ul class="nba">
  <% for(var i=0; i<nbaStats.length; i++) {%>
    <li class="tennisArray">
      <span><%= nbaStats[i].playerName %></span>...
      <span><%= nbaStats[i].playerPosition %></span>...
      <span><%= nbaStats[i].playerTeam %></span> 
      <span><%= nbaStats[i].pointsPerGame %></span>
      <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>
  <script type="text/javascript" src="/main.js"></script>
</body>
</html>

